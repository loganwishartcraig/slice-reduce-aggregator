{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "module": "CommonJS",
        "target": "es5",
        "jsx": "react",
        "lib": [
            "esnext",
            "dom",
            "webworker"
        ],
        "allowJs": true,
        "checkJs": true,
        "alwaysStrict": true,
        "locale": "en",
        "moduleResolution": "node",
        "rootDir": "src",
        "sourceMap": true,
        "sourceRoot": "src",
        "skipLibCheck": true,
        "strict": true,
        "typeRoots": [
            "node_modules/@types",
            "custom_typings"
        ],
        "outDir": "./dist"
    },
    "include": [
        "./lib/**/*",
        "../_data-aggregator/data-sub-aggregation",
        "../_data-aggregator/data-aggregation-factory",
        "../_data-aggregator/aggregated-data-set",
        "../_data-aggregator/aggregation-query-result",
        "../_data-aggregator/data-group",
        "../_data-aggregator/types",
        "../_data-aggregator/index.ts",
        "__tests__"
    ],
    "exclude": [
        "node_modules",
        "__tests__"
    ]
}
